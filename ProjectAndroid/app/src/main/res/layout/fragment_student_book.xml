<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StudentBookFragment">

    <Spinner
        android:id="@+id/spinnerDom"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="29dp"
        android:background="#323BEFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="14dp"
        android:text="Dom"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDom"
        app:layout_constraintStart_toStartOf="@+id/spinnerDom"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Room"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerRoom"
        app:layout_constraintStart_toStartOf="@+id/spinnerRoom"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDom" />

    <Spinner
        android:id="@+id/spinnerRoom"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="35dp"
        android:background="#333BEFFF"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="14dp"
        android:text="Bed No"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerBed"
        app:layout_constraintStart_toStartOf="@+id/spinnerBed"
        app:layout_constraintTop_toBottomOf="@+id/spinnerRoom" />

    <Spinner
        android:id="@+id/spinnerBed"
        android:layout_width="335dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="303dp"
        android:layout_marginEnd="36dp"
        android:background="#333BEFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBook"
        android:layout_width="164dp"
        android:layout_height="48dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="401dp"
        android:layout_marginBottom="42dp"
        android:text="Book"
        app:layout_constraintBottom_toTopOf="@+id/txtMoneyInAccount"
        app:layout_constraintStart_toStartOf="@+id/txtMoneyInAccount"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMoneyInAccount"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="206dp"
        android:text="Số tiền tối thiểu để đặt phòng:2,600,000 nvđ"
        android:textColor="#4CAF50"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBook" />

</androidx.constraintlayout.widget.ConstraintLayout>